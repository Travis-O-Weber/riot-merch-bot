{
  "name": "riot-merch-bot",
  "version": "1.0.0",
  "description": "Self-healing web automation bot for Riot Merch",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "dry": "cross-env DRY_RUN=1 node src/bot.js",
    "cart-only": "cross-env DRY_RUN=0 CHECKOUT_ENABLED=0 node src/bot.js",
    "checkout": "cross-env DRY_RUN=0 CHECKOUT_ENABLED=1 FULL_SEND=0 node src/bot.js",
    "full-send": "cross-env DRY_RUN=0 CHECKOUT_ENABLED=1 FULL_SEND=1 node src/bot.js",
    "headless": "cross-env HEADLESS=1 node src/bot.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "riot",
    "merch",
    "automation",
    "playwright",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "playwright": "^1.55.0",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.34.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
